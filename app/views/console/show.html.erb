<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">Sqlite query console:</div>
          <div class="panel-body">
            <form id="sqliteForm" style="margin-bottom: 25px;">
              <div class="form-group">
                <textarea id="sqliteSentence" class="form-control" rows="10"></textarea>
              </div>
              <div id="sqliteButts">
                <button id="sqliteSubmit" type="submit" class="btn btn-default">Submit</button>
                <button id="sqliteReset" type="button" class="btn btn-danger">Reset Database</button>
              </div>
            </form>
            <p id="sqliteStatus"></p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">Database data:</div>
          <div class="panel-body" id="dbData">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="sqliteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Query results</h4>
      </div>
      <div id="sqliteModalContent" class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>